<!-- ================ top product area start ================= -->
<section style="margin-bottom: 50px" class="related-product-area">
  <div class="container">
    <div class="section-intro pb-60px">
      <p style="text-align: justify;">Popular Item in the store</p>
      <h2>Top <span class="section-intro__style">Sale</span></h2>
    </div>
    <div class="row mt-30">
      {{#each products}}
        <div class="col-sm-6 col-xl-3 mb-4 mb-xl-0">
          <div class="single-search-product-wrapper">
            <div class="single-search-product d-flex">
              <a href="products/{{this._id}}"><img src={{this.image_url}} alt=""></a>
              <div class="desc">
                <a href="products/{{this._id}}" class="title">{{this.name}}</a>
                <del><p class="card-product__price"><script>
                  var price = {{this.price}} / 0.75;
                  price = price.toLocaleString('vi', {style : 'currency', currency : 'VND'});
                  document.write(price);</script></p></del>
                <p class="card-product__price"><script>
                  var price = {{this.price}};
                  price = price.toLocaleString('vi', {style : 'currency', currency : 'VND'});
                  document.write(price);</script></p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
